<H1> Hello City</H1>



<%= form_tag({controller: "cities", action: "find_location"}, method: "get") do %>
<%= label_tag(:keyword, "Location")%>
<%= text_field_tag(:keyword)%>
<%= label_tag(:radius, "radius:")%>
<%= select_tag(:radius, options_for_select([['10km'], ['100km'],['1000km']])) %>


<%= submit_tag("Search")%>
<%end%>

<%if @location.nil?%>
<%else%>
<%=@location['results'][0]['geometry']['location']['lat']%>
<%=@location['results'][0]['geometry']['location']['lng']%>
<%end%>

<%= button_to "Johannesburg", johannesburg_path %><br>

<%= button_to "Madrid", madrid_path %><br>

<%= button_to "Alice Springs", alice_springs_path %><br>
